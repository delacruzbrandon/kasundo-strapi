{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "default": "Untitled",
      "required": true
    },
    "coverPhoto": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "body": {
      "type": "blocks",
      "required": true
    },
    "eventId": {
      "type": "uid",
      "required": true
    },
    "scheduledDate": {
      "type": "datetime",
      "required": true
    },
    "description": {
      "type": "string",
      "default": "No Description",
      "maxLength": 120,
      "required": true
    }
  }
}
